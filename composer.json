{
  "name": "roundcube/xapi",
  "description": "Adds xAPI to roundcube",
  "keywords": ["xapi"],
  "homepage": "https://www.cert.org/",
  "license": "GPL-3.0",
  "type": "roundcube-plugin",
  "version": "1.0",
  "authors": [
    {
      "name": "Adam Welle",
      "email": "arwelle@cert.org",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.0",
    "roundcube/plugin-installer": ">=0.1.2",
    "symfony/http-client": "*",
    "php-xapi/client": "0.6.0",
    "php-http/discovery": "1.x-dev"
  },
  "extra": {
    "roundcube": {
      "min-version": "1.6"
    }
  },
  "minimum-stability": "dev",
  "config": {
    "platform" : {
      "php": "7.3"
    },
    "allow-plugins": {
      "roundcube/plugin-installer": true,
      "php-http/discovery": true
    }
  }
}
